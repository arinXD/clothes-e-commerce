<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_below="@id/v1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/textimgnaja"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_list"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/statusTimeTransportUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textimgnaja"
            android:text="เวลา:"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="#808080"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/statusTransportuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusTimeTransportUser"
            android:layout_toRightOf="@id/textimgnaja"
            android:layout_marginBottom="10dp"
            android:text="การจัดส่งสำเร็จ:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/statusTimeTransportuser"
            android:layout_width="wrap_content"
            android:layout_below="@id/statusTransportuser"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textimgnaja"
            android:text="รายการที่:"
            android:textStyle="bold"
            android:textColor="#808080"
            android:textSize="16sp"/>

    </RelativeLayout>
</LinearLayout>