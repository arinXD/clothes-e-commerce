<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:padding="20dp"
    android:background="@drawable/border_shape">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_baseline_close_24" />
    <ImageView
        android:id="@+id/productImg"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_list"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_marginRight="30dp"
        android:layout_below="@id/btnDelete"/>
    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/productImg"
        android:layout_below="@id/btnDelete"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/productDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/productImg"
        android:layout_below="@id/productName"
        android:text="detail...."
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/productImg"
        android:layout_below="@id/productDetail"
        android:text="100 THB."
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_marginTop="15dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/sizeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/productImg"
        android:layout_below="@id/productPrice"
        android:text="ไซส์"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/productSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sizeTxt"
        android:layout_below="@id/productPrice"
        android:text="S"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/amountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sizeTxt"
        android:layout_toRightOf="@id/productImg"
        android:text="จำนวน"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/productAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/amountTxt"
        android:layout_below="@id/sizeTxt"
        android:text="1"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="16sp" />

</RelativeLayout>